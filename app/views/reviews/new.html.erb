<div class="container">
  <p id="notice"><%= notice %></p>
  <p><strong>CREATE A REVIEW FOR: <%= @restaurant.name %></strong></p>


  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit Review", class: "btn btn-primary justify-content-end" %>
  <% end %>

</div>
